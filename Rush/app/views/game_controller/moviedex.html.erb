<div class="screen-wraper">
  <% if @movie != nil %>
    <div class="moviedex-side">
      <%= image_tag("#{@movie[:poster]}", class: "movie-poster") %>
      <div class=" right-side">
        <h3 style="margin: 0"><%= @movie[:title]%></h3>
        <p style="margin: 5px 0 0 0"><%= @movie[:director]%></p>
        <p style="margin: 0"><%= @movie[:year]%></p>
        <p style="margin: 0"><%= @movie[:genre]%></p>
      </div>
    </div>
    <div class="moviedex-side synopsis">
      <p><%= @movie[:plot]%></p>
    </div>
  <% else %>
    <h1 class="text-center">Empty</h1>
    <p class="text-center">You don't have captured any moviemon yet</p>
  <% end %>
</div>